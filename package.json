{
  "name": "@fnndsc/chili",
  "version": "1.25.0",
  "description": "ChILI handles Intelligent Line Interactions: A CLI and library for ChRIS, acting as the controller layer for business logic and user presentation.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./utils": "./dist/utils.js",
    "./*": "./dist/*"
  },
  "bin": {
    "chili": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x ./dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "clean": "rm -rf dist types fnndsc-chili*tgz",
    "build:cumin": "cd ../cumin && npm run build",
    "build:chili": "npm run clean && npm install && npm run build",
    "build:all": "npm run build:cumin && npm run build:chili && npm run pack",
    "prepack": "npm link ../cumin",
    "pack": "npm pack",
    "install:local": "npm i --ignore-scripts $(npm pack | tail -1)",
    "deploy": "npm run build:all && npm run install:local"
  },
  "files": [
    "dist/**/*",
    "docs/**/*"
  ],
  "keywords": [
    "chris",
    "cli",
    "repl"
  ],
  "author": "FNNDSC <dev@babyMRI.org>",
  "license": "MIT",
  "dependencies": {
    "@fnndsc/chrisapi": "^1.21.0",
    "@fnndsc/cumin": "file:../cumin",
    "@fnndsc/salsa": "file:../salsa",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "archy": "^1.0.0",
    "asciidoctor": "^2.2.6",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cli-highlight": "^2.1.11",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.1.0",
    "figlet": "^1.7.0",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.0",
    "marked-terminal": "^6.1.0",
    "node-fetch": "^3.3.2",
    "omelette": "^0.4.17",
    "open": "^10.1.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/archy": "^0.0.36",
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.11",
    "@types/omelette": "^0.4.4",
    "@types/table": "^6.3.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.5.2"
  }
}
